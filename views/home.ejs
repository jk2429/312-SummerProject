<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
</head>
<body>
    <%- include('navBar') %>
	
	<h1>Welcome to the Blog</h1>
	<h2>Express Yourself!</h2>

	<!-- blog post display below-->
    <h3>Latest Posts</h3>

    <% if (latestPosts.length > 0) { %>
        <% latestPosts.forEach(function(post) { %>
            <div>
                <h2><%- post.title %></h2>
                <p><%- post.content %></p>
                <% if (post.tags) { %>
                    <p><%- post.tags.join(', ') %></p>
                <% } %>
                <% if (post.image) { %>
                    <img src="<%- post.image %>" alt="Blog Image">
                <% } %>
                <p>Posted on: <%- post.date %></p>
                <p>Posted by: <%- post.author.username %></p> <!-- Display authorâ€™s username -->
            </div>
            <hr>
        <% }) %>
    <% } else { %>
        <p>No posts available.</p>
    <% } %>
</body>

	<%- include('footer') %>
</html>