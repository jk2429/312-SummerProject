<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/styles.css">
    <title>Profile</title>
</head>
<body>

	<%- include('header') %>
    <%- include('navBar') %>
	
    <main>
		<img src="<%- user.profilePicture %>" alt="Profile Picture.png">
		<h2><%- user.username %></h2>
		<p>Bio:<br><%- user.bio %></p>

		<h2 style="text-align: center">My Blogs</h2>
		<% blogPosts.forEach(function(post) { %>
			<div class="blog-container">
				<% if (post.image) { %>
                    <img src="<%- post.image %>" alt="Blog Image">
                <% } %>
				<div class="blog-content">
					<h3><%- post.title %></h3>
					<p><%- post.content %></p>
					<div class="blog-meta">
						<% if (post.tags) { %>
							<p><%- post.tags.join(', ') %></p>
						<% } %>
						<p>Posted on: <%- post.date %></p>
						<p>Posted by: <%- post.author.username %></p>
					</div>
				</div>
            </div>
            <hr>
		<% }) %>
	</main>
</body>
</html>